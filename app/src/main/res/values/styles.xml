<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/share_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@animator/button_animation</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="ImageButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="RadioBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="CloudipspTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:editTextStyle">@style/CloudipspEditText</item>
    </style>

    <style name="CloudipspEditText" parent="android:style/Widget.Holo.EditText">
        <!--<item name="android:background">#ffff00</item>-->
    </style>

</resources>
