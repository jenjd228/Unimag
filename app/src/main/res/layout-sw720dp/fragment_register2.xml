<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.register.RegisterFragment2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="@string/register2Top"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:textSize="40sp"
        android:hint="@string/surname"
        android:backgroundTint="@color/colorPrimary"
        android:maxLength="32"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:textSize="40sp"
        android:hint="@string/name"
        android:backgroundTint="@color/colorPrimary"
        android:maxLength="32"/>

    <EditText
        android:id="@+id/secondSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:textSize="40sp"
        android:hint="@string/secondSurname"
        android:backgroundTint="@color/colorPrimary"
        android:maxLength="32"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:gravity="center"
        android:text="Введите ваш день, месяц и год рождения."
        android:textSize="46sp"
        android:backgroundTint="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/birthDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0dp"
            android:maxLength="2"
            android:textSize="38sp"
            android:hint="День"
            android:backgroundTint="@color/colorPrimary"
            android:digits="@string/allowed_numbers"
            android:inputType="number"/>

        <EditText
            android:id="@+id/birthMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0dp"
            android:maxLength="2"
            android:textSize="38sp"
            android:hint="Месяц"
            android:backgroundTint="@color/colorPrimary"
            android:digits="@string/allowed_numbers"
            android:inputType="number"/>

        <EditText
            android:id="@+id/birthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0dp"
            android:maxLength="4"
            android:textSize="38sp"
            android:hint="Год"
            android:backgroundTint="@color/colorPrimary"
            android:digits="@string/allowed_numbers"
            android:inputType="number"/>
    </LinearLayout>

    <Button
        android:id="@+id/register_button2"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:textSize="36sp"
        android:text="@string/register" />

</LinearLayout>
