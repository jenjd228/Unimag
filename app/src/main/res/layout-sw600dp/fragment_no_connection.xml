<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/image_no_connection"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="300dp"
        android:src="@drawable/ic_no_connection"
        android:background="@null" />

    <TextView
        android:id="@+id/textview_about_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_no_connection"
        app:layout_constraintBottom_toTopOf="@id/button_update_connection"
        android:layout_marginTop="14dp"
        android:textSize="28sp"
        android:textColor="@color/colorPrimary"
        android:text="Отстутствует Интеренет подключение" />

    <Button
        android:id="@+id/button_update_connection"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_about_connection"
        android:textSize="22sp"
        android:padding="20dp"
        android:layout_marginTop="28dp"
        android:text="Переподключиться" />


</androidx.constraintlayout.widget.ConstraintLayout>
