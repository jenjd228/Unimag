<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_basket"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.basket.BasketFragment">

    <GridView
        android:id="@+id/grid_view_basket"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        app:layout_constraintBottom_toTopOf="@id/button_oformlenie_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </GridView>

    <Button
        android:id="@+id/button_oformlenie_order"
        style="@style/ButtonStyle"
        app:layout_constraintTop_toBottomOf="@id/grid_view_basket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Оформить заказ">
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>
